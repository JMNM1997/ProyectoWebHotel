{% extends 'base.html.twig' %}

{% block title %}Colorflor index{% endblock %}

{% block body %}
<div class="container">
  <h2>Mantenimiento de colores de plantas</h2>
  <p>Bienvenido al mantenimiento de colores de plantas</p>            
  <table class="table table-dark table-hover">
<thead>
            <tr>
                <th>Id Color</th>
                <th>Nombre</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
        {% for colorflor in colorflors %}
            <tr>
                <td>{{ colorflor.idcolorflor }}</td>
                <td>{{ colorflor.color }}</td>
                <td>
                    <a href="{{ path('colorflor_show', {'idcolorflor': colorflor.idcolorflor}) }}">Mostrar</a>
                    <a href="{{ path('colorflor_edit', {'idcolorflor': colorflor.idcolorflor}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No hay aún</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('colorflor_new') }}">Crear nuevo color</a>
{% endblock %}
