{% extends 'base.html.twig' %}

{% block title %}Categoria{% endblock %}

{% block body %}
<div class="container">
  <h2>Mantenimiento categorías</h2>
  <p>Bienvenido al mantenimiento de las categorías de las noticias</p>            
  <table class="table table-dark table-hover">

        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
        {% for categorium in categorias %}
            <tr>
                <td>{{ categorium.idcategoria }}</td>
                <td>{{ categorium.nombre }}</td>
                <td>
                    <a href="{{ path('categoria_show', {'idcategoria': categorium.idcategoria}) }}">Mostrar</a>
                    <a href="{{ path('categoria_edit', {'idcategoria': categorium.idcategoria}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No hay categorías</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categoria_new') }}">Crear una nueva categoría</a>
{% endblock %}
