{% extends 'base.html.twig' %}

{% block title %}Planta{% endblock %}

{% block body %}


<!-- Page Content -->
<div class="container">

  <!-- Portfolio Item Heading -->
  <h1 class="my-4">Información:
    <small>{{planta.nombre}}</small>
  </h1>

  <!-- Portfolio Item Row -->
  <div class="row">

    <div class="col-md-8">
      <img class="img-fluid" src="{{ asset('imagenes/' ~ planta.imagen) }}"  alt="" style="width: 80vh; height: 70vh;" class="img-fluid" alt="">
    </div>

    <div class="col-md-4">
      <h3 class="my-3">Descripción del producto</h3>
      <p>{{planta.descripcion}}</p>
      <h3 class="my-3">Colores</h3>


      <ul>
	{% for parte in planta.parteutilIdparteutil %}
        <li>{{ parte.parte }}</li>
	{% endfor %}
      </ul>

    </div>

  </div>
  <!-- /.row -->

  <!-- Related Projects Row -->
