{% extends 'base.html.twig' %}

{% block title %}Complementos{% endblock %}

{% block body %}
<div class="container">
  <h2>Mantenimiento complementos</h2>
  <p>Bienvenido al mantenimiento de los complementos de habitaciones del hotel</p>            
  <table class="table table-dark table-hover">

        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Acci√≥n</th>
            </tr>
        </thead>
        <tbody>
        {% for complemento in complementos %}
            <tr>
                <td>{{ complemento.idcomplemento }}</td>
                <td>{{ complemento.nombre }}</td>
                <td>
                    <a href="{{ path('complemento_show', {'idcomplemento': complemento.idcomplemento}) }}">Mostrar</a>
