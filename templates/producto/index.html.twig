{% extends 'base.html.twig' %}

{% block title %}Producto index{% endblock %}

{% block body %}
<div class="container">
  <h2>Mantenimiento de los productos</h2>
  <p>Bienvenido al mantenimiento de los productos</p>            
  <table class="table table-dark table-hover">
<thead>
            <tr>
                <th>Id Producto</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.idproducto }}</td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.descripcion }}</td>
                <td>{{ producto.precio }}</td>
                <td>
                    <a href="{{ path('producto_show', {'idproducto': producto.idproducto}) }}">Mostrar</a>
                    <a href="{{ path('producto_edit', {'idproducto': producto.idproducto}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No hay existencias</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('producto_new') }}">Crear producto nuevo</a>
{% endblock %}
