<form method="post" action="{{ path('producto_delete', {'idproducto': producto.idproducto}) }}" onsubmit="return confirm('¿Estás seguro de que deseas borrarlo?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ producto.idproducto) }}">
    <button class="btn">Borrar</button>
</form>
