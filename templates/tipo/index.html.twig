{% extends 'base.html.twig' %}

{% block title %}Tipos{% endblock %}

{% block body %}
<div class="container">
  <h2>Mantenimiento tipo de habitaciones</h2>
  <p>Bienvenido al mantenimiento de los tipos de habitaciones del hotel</p>            
  <table class="table table-dark table-hover">

        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Acci√≥n</th>
            </tr>
        </thead>
        <tbody>
        {% for tipo in tipos %}
            <tr>
                <td>{{ tipo.idtipo }}</td>
                <td>{{ tipo.nombre }}</td>
                <td>
                    <a href="{{ path('tipo_show', {'idtipo': tipo.idtipo}) }}">Mostrar</a>
                    <a href="{{ path('tipo_edit', {'idtipo': tipo.idtipo}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No hay tipos creados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tipo_new') }}">Crear uno nuevo</a>
{% endblock %}
