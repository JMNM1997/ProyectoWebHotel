{% extends 'base.html.twig' %}

{% block title %}Usomedico index{% endblock %}

{% block body %}
<div class="container">
  <h2>Mantenimiento de usos médicos</h2>
  <p>Bienvenido al mantenimiento de los usos médicos de una planta</p>            
  <table class="table table-dark table-hover">
<thead>
            <tr>
                <th>Id Uso-Médico</th>
                <th>Nombre</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
        {% for usomedico in usomedicos %}
            <tr>
                <td>{{ usomedico.idusomedico }}</td>
                <td>{{ usomedico.uso }}</td>
                <td>
                    <a href="{{ path('usomedico_show', {'idusomedico': usomedico.idusomedico}) }}">Mostrar</a>
                    <a href="{{ path('usomedico_edit', {'idusomedico': usomedico.idusomedico}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No existen usos.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('usomedico_new') }}">Crear uno nuevo</a>
{% endblock %}
